{
  "env": {
    "es2021": true
  },

  "extends": [
    "eslint: recommended",
    "plugin: import/recommended",
    "airbnb-base",
    "prettier"
  ],

  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "no-underscore-dangle": ["error", { "allow": ["_id"] }]
  }
}
